<!DOCTYPE html>
<html lang="en">
	<%- include("../partials/head.ejs") %>
	<body>
		<%- include("../partials/navbar.ejs") %> <%-
		include("../partials/flowbite.ejs") %>

		<div>
			<section class="bg-white dark:bg-gray-900">
				<div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
					<h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">
						Update Game
					</h2>
					<form action="/game/updategame/<%= uniqueGame.Game_ID %>" method="post">
						<div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
							<div class="sm:col-span-2">
								<label
									for="name"
									class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
									>Game Name</label
								>
								<input
									type="text"
									name="name"
									id="name"
									class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
									placeholder="Type game name"
									required=""
									value="<%= uniqueGame.title %>"
								/>
							</div>
							<div class="sm:col-span-2">
								<label
									for="release_date"
									class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
									>Release Date</label
								>
								<input
									type="date"
									name="release_date"
									id="release_date"
									class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
									required=""
									value="<%= uniqueGame_date %>"
								/>
							</div>
							<div class="w-full">
								<label
									for="developer"
									class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
									>Developer</label
								>
								<input
									type="text"
									name="developer"
									id="developer"
									class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
									placeholder="Game Developer"
									required=""
									value="<%= uniqueGame.developer %>"
								/>
							</div>

							<div>
								<label
									for="genre"
									class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
									>Genre</label
								>
								<select
									id="genre"
									name="genre"
									class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
									multiple
									required
								>
									<option>Select genre</option>
									<% for( let index = 0; index < genres.length; index++ ) { %>
									<option value=<%= genres[index].genre_name %>
										<%= genres[index].genre_name === uniqueGame_genre || (Array.isArray(uniqueGame_genre) && uniqueGame_genre.includes(genres[index].genre_name)) ? 'selected' : '' %> > <%= genres[index].genre_name %>
									</option>
									<% } %>
								</select>
							</div>
							<div class="sm:col-span-2">
								<label
									for="description"
									class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
									>Description</label
								>
								<textarea
									id="description"
									name="description"
									rows="8"
									class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
									placeholder="Your description here"
									
								><%= uniqueGame.description %></textarea>
							</div>
						</div>
						<button
							type="submit"
							class="inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-blue-500 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-blue-700"
						>
							Update Game
						</button>
					</form>
				</div>
			</section>
		</div>
	</body>
	
</html>
